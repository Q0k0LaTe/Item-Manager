<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Item Manager - Professional inventory management system">
    <meta name="keywords" content="inventory, items, management, storage, tracking">
    <meta name="author" content="Your Name">
    <meta name="theme-color" content="#3498db">
    
    <title><%= typeof title !== 'undefined' ? title : 'Item Manager' %></title>
    
    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/img/favicon.png">
    
    <!-- External CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="/css/styles.css">
    
    <!-- External JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.6.2/axios.min.js" defer></script>
</head>
<body>
    <!-- Skip to main content for accessibility -->
    <a href="#main-content" class="visually-hidden">Skip to main content</a>
    
    <header>
        <nav class="main-nav" role="navigation" aria-label="Main navigation">
            <div class="logo">
                <a href="/" aria-label="Home">
                    <i class="fas fa-box-open"></i>
                    <span>Item Manager</span>
                </a>
            </div>
            
            <!-- You can add navigation items here -->
            <div class="nav-links">
                <a href="/" class="active">Dashboard</a>
                <!-- Add more nav links as needed -->
            </div>
        </nav>
    </header>

    <main id="main-content" role="main">
        <div class="container">
            <!-- Flash Messages -->
            <% if (typeof success_msg !== 'undefined' && success_msg.length > 0) { %>
                <div class="alert success" role="alert">
                    <%= success_msg %>
                </div>
            <% } %>

            <% if (typeof error_msg !== 'undefined' && error_msg.length > 0) { %>
                <div class="alert error" role="alert">
                    <%= error_msg %>
                </div>
            <% } %>

            <!-- Main Content -->
            <%- body %>
        </div>
    </main>

    <footer role="contentinfo">
        <div class="container">
            <p>&copy; <%= new Date().getFullYear() %> Item Manager. All rights reserved.</p>
            <!-- You can add more footer content here -->
        </div>
    </footer>

    <!-- Custom JS -->
    <script src="/js/main.js" defer></script>

    <!-- Optional: Add any additional scripts here -->
    <% if (typeof scripts !== 'undefined') { %>
        <% scripts.forEach(function(script) { %>
            <script src="<%= script %>" defer></script>
        <% }); %>
    <% } %>
</body>
</html>